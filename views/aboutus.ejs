<% layout('layouts/boilerplate')%>
<style>
    body {
      font-family: Arial, Helvetica, sans-serif;
      margin: 0;
    }
    h2{
        font-size: 1.4em;
        text-align: center;
    }
    html {
      box-sizing: border-box;
    }
    
    *, *:before, *:after {
      box-sizing: inherit;
    }
    .row{
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        margin: 2% auto;
        width: 100%;
    }
    .parast{
        font-size: 1em;
        margin: 0 auto;
        width: 100%;
    }

    .column {
      float: left;
      width: 20%;
      margin-bottom: 16px;
      padding: 0 8px;
    }
    
    .card {
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
      margin: 8px;
    }
    
    .about-section {
      padding: 50px;
      text-align: center;
      background-color: #474e5d;
      color: white;
    }
    
    .container {
      padding: 16px 15px;
    }
    
    .container::after, .row::after {
      content: "";
      clear: both;
      display: table;
    }
    
    .title {
      color: grey;
    }
    
    .button {
      border: none;
      outline: 0;
      display: inline-block;
      padding: 8px;
      color: white;
      background-color: #000;
      text-align: center;
      cursor: pointer;
      width: 100%;
    }
    
    .button:hover {
      background-color: #555;
    }
    
    @media screen and (max-width: 650px) {
      .column {
        width: 100%;
        display: block;
      }
    }
    </style>
